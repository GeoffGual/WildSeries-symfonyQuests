{% extends 'base.html.twig' %}

{% block body %}
    <h1> Les dernières séries ajoutées :</h1>

    {% for program in lastPrograms %}
    <div>
        <h2>{{ program.title }} - Catégorie : {{ program.category.name }}</h2>
        <p>{{ program.summary }}</p>
        <a href="{{ path("program_show", { program: program.slug }) }}">Voir la fiche</a>
    </div>
   {% endfor %}
{% endblock %}